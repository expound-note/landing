{
  "name": "archos-guide",
  "version": "1.0.0",
  "description": "Guide: Use Arch Linux for code.",
  "main": "web-components/tabs-element.js",
  "module": "tabs-element.js",
  "type": "module",
  "scripts": {
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint 'web-components/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "site": "npm run site:clean && npm run build && npm run analyze && npm run site:build && npm run site:assets && npm run site:gen",
    "site:clean": "rimraf site",
    "site:build": "rollup -c",
    "site:gen": "eleventy --config=.eleventy.cjs",
    "site:gen:watch": "eleventy --config=.eleventy.cjs --watch",
    "site:assets": "cp node_modules/prismjs/themes/prism-okaidia.css site/",
    "site:serve": "wds --root-dir=site --node-resolve --watch",
    "analyze": "cem analyze --litelement --globs \"web-components/**/*.ts\"",
    "analyze:watch": "cem analyze --litelement --globs \"web-components/**/*.ts\" --watch",
    "serve": "wds --watch",
    "serve:prod": "MODE=prod npm run serve",
    "test": "npm run test:dev && npm run test:prod",
    "test:dev": "wtr",
    "test:watch": "wtr --watch",
    "test:prod": "MODE=prod wtr",
    "test:prod:watch": "MODE=prod wtr --watch",
    "checksize": "rollup -c ; cat site/components.bundled.js | gzip -9 | wc -c ; rm site/components.bundled.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "lit": "^2.3.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.1.0",
    "@custom-elements-manifest/analyzer": "^0.6.4",
    "@rollup/plugin-node-resolve": "^14.0.1",
    "@rollup/plugin-replace": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "@web/dev-server": "^0.1.34",
    "@web/dev-server-legacy": "^1.0.1",
    "@web/test-runner": "^0.14.0",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "eslint": "^8.23.0",
    "lit-analyzer": "^1.2.1",
    "prettier": "^2.7.1",
    "prismjs": "^1.29.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.0",
    "rollup-plugin-summary": "^1.4.3",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.8.3"
  }
}
